# Example environment variables for the API
# Copy this file to .env for local development

# Port for the API to listen on
PORT=8000

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:8080,https://trustverify.vercel.app

# MLflow tracking URI
MLFLOW_TRACKING_URI=sqlite:///mlops/mlruns.db

# MLflow experiment name
MLFLOW_EXPERIMENT_NAME=fake-news-detector
